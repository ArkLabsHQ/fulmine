package components

templ HeaderTemplate(title string, backPath templ.SafeURL) {
	<div class="grid grid-cols-[1fr_6fr_1fr] items-center w-full mb-8">
	  <a href={backPath}>@BackButton()</a>
		<h1 class="text-2xl text-center font-semibold">{title}</h1>
	</div>
}

templ Header(title string, backPath ...string) {
	if len(backPath) > 0 {
	  @HeaderTemplate(title, templ.URL(backPath[0]))
	} else {
	  @HeaderTemplate(title,  templ.URL("/"))
	}
}